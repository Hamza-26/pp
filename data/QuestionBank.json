{
  "version": "v1",
  "families": {
    "QF.int_roots.scaled": {
      "description": "Factoring with guaranteed integer roots via a(x-b)(x-c).",
      "params": {
        "a": {
          "int": [
            1,
            5
          ]
        },
        "b": {
          "int": [
            -10,
            10
          ]
        },
        "c": {
          "int": [
            -10,
            10
          ]
        }
      },
      "derive": {
        "A": "a",
        "B": "-a*(b+c)",
        "C": "a*b*c",
        "r1": "b",
        "r2": "c",
        "sum_roots": "b + c",
        "prod_roots": "b * c"
      },
      "views": {
        "question": {
          "prompt": "Solve by factoring:  {{A}}x^2 + {{B}}x + {{C}} = 0",
          "ui": {
            "type": "roots_set"
          },
          "answer": {
            "type": "set_numeric",
            "of": [
              "r1",
              "r2"
            ]
          }
        },
        "standard_form": {
          "prompt": "Fill the coefficients: __ x^2 + __ x + __ = 0",
          "ui": {
            "type": "coeff_triplet",
            "order": [
              "A",
              "B",
              "C"
            ]
          },
          "answer": {
            "type": "tuple_int",
            "of": [
              "A",
              "B",
              "C"
            ]
          }
        },
        "sum_product_or_ac": {
          "prompt": "Find integers m, n with m + n = {{sum_roots}} and m \u00b7 n = {{prod_roots}}.",
          "ui": {
            "type": "pair_unordered_int"
          },
          "answer": {
            "type": "pair_unordered_int",
            "of": [
              "r1",
              "r2"
            ]
          }
        },
        "write_factors": {
          "prompt": "Complete: __ ( x \u2212 __ ) ( x \u2212 __ )",
          "ui": {
            "type": "factor_binomials",
            "template": "__ ( x \u2212 __ ) ( x \u2212 __ )",
            "fields": [
              "A",
              "r1",
              "r2"
            ]
          },
          "answer": {
            "type": "factor_triplet",
            "of": [
              "A",
              "r1",
              "r2"
            ],
            "options": {
              "allow_order_swap": true,
              "allow_A_one_equals_blank": true
            }
          }
        },
        "roots_from_factors": {
          "prompt": "From your factors, state the roots (unordered).",
          "ui": {
            "type": "roots_set"
          },
          "answer": {
            "type": "set_numeric",
            "of": [
              "r1",
              "r2"
            ]
          }
        }
      },
      "presets": [
